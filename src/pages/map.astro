---
import Layout from "../layouts/AstroCraftFrame.astro";
import { MAP_URL } from "../consts";
---

<Layout
	subtitle="Live Map"
	description="Explore the Station48 Minecraft server live map"
	eagerFooter
>
	<p class="placeholder text-minecraft-aqua text-xl">Loading map...</p>
	<iframe
		class="h-full grow"
		src={MAP_URL}
		title="Station48 Live Map"
		loading="eager"
		allowfullscreen="true"
		sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
		referrerpolicy="no-referrer"
		allow="geolocation; microphone; camera; midi; encrypted-media; autoplay; clipboard-write; picture-in-picture; web-share"
	></iframe>
	<style>
		iframe {
			width: 100%;
			height: 100%;
			border: none;
			z-index: 600;
		}

		.placeholder {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
			z-index: 500;
			font-size: 1.5rem;
			font-weight: bold;
		}
	</style>
</Layout>
