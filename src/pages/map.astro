---
import Layout from "../layouts/AstroCraftFrame.astro";
---

<Layout
	subtitle="Live Map"
	description="Explore the Station48 Minecraft server live map"
>
	<div
		class="h-full w-full flex flex-col items-center justify-center grow pt-4"
	>
		<p class="placeholder text-minecraft-aqua text-xl">Loading map...</p>
		<iframe
			class="h-full grow"
			src="https://map.station48.xyz/#world:101:0:219:602:0:0:0:1:flat"
		></iframe>
	</div>
	<style>
		iframe {
			width: 100%;
			height: 100%;
			border: none;
			z-index: 600;
		}

		.placeholder {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
			z-index: 500;
			font-size: 1.5rem;
			font-weight: bold;
		}
	</style>
</Layout>
