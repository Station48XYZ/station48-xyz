---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import type { LayoutProps } from "./layoutProps";
import { Image } from "astro:assets";
import magikarp from "../assets/magikarp.webp";
import spawn from "../assets/spawn.png";

interface Props extends LayoutProps {}

const { navbar = true, footer = true, subtitle, description } = Astro.props;
---

<html>
  <head>
    <Head {subtitle} {description} />
  </head>
  <body
    class="dark flex flex-col min-h-screen p-0 m-0 bg-light-level-8 scrollbar font-minecraft"
    style={`background-image: url(${spawn.src});`}
  >
    {navbar && <Navbar />}
    <div class="h-full w-full justify-center grow minecraft blog">
      <div class="content h-full grow">
        <slot />
      </div>
      <Image
        src={magikarp}
        alt="Pokemon: Magikarp"
        class="poke-icon"
        loading="eager"
      />
    </div>
    {footer && <Footer />}
  </body>
</html>
