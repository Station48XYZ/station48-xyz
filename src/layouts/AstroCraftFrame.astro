---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import type { LayoutProps } from "./layoutProps";
import spawn from "../assets/spawn.png";

interface Props extends LayoutProps {
  eagerFooter?: boolean;
}

const {
  navbar = true,
  footer = true,
  subtitle,
  description,
  eagerFooter = false,
} = Astro.props;
---

<html>
  <head>
    <Head {subtitle} {description} />
  </head>
  <body
    class="dark flex flex-col min-h-screen p-0 m-0 bg-light-level-8 scrollbar font-minecraft"
    style={`background-image: url(${spawn.src});`}
  >
    {navbar && <Navbar />}
    <div
      class="h-full w-full flex flex-col items-center justify-center grow pt-4"
    >
      <slot />
    </div>
    {footer && <Footer eager={eagerFooter} />}
  </body>
</html>
